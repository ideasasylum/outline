{
  "name": "Outline",
  "description": "Open source wiki and knowledge base for growing teams",
  "website": "https://www.getoutline.com/",
  "repository": "https://github.com/outline/outline",
  "success_url": "/",
  "formation": {
    "web": {
      "quantity": 1,
      "size": "Hobby"
    }
  },
  "image": "heroku/node",
  "addons": [
    {
      "plan": "heroku-redis"
    },
    {
      "plan": "heroku-postgresql"
    }
  ],
  "scripts": {
    "postdeploy": "yarn sequelize db:migrate"
  },
  "env": {
    "SECRET_KEY": {
      "description": "A secret key",
      "generator": "secret"
    },
    "SLACK_KEY": {
      "description": "Your Slack app client id",
      "required": true
    },
    "SLACK_SECRET": {
      "description": "Your Slack secret client secret",
      "required": true
    },
    "SLACK_VERIFICATION_TOKEN": {
      "description": "Your Slack verification token",
      "required": false
    },
    "URL": {
      "description": "https://{your app name}.herokuapp.com",
      "required": false
    },
    "AWS_ACCESS_KEY_ID": {
      "description": "",
      "required": false
    },
    "AWS_SECRET_ACCESS_KEY": {
      "description": "",
      "required": false
    },
    "AWS_S3_UPLOAD_BUCKET_URL": {
      "description": "",
      "required": false
    },
    "AWS_S3_UPLOAD_BUCKET_NAME": {
      "description": "",
      "required": false
    },
    "SMTP_HOST": {
      "description": "",
      "required": false
    },
    "SMTP_PORT": {
      "description": "",
      "required": false
    },
    "SMTP_USERNAME": {
      "description": "",
      "required": false
    },
    "SMTP_PASSWORD": {
      "description": "",
      "required": false
    },
    "SMTP_FROM_EMAIL": {
      "description": "",
      "required": false
    },
    "SMTP_REPLY_EMAIL": {
      "description": "",
      "required": false
    }
  }
}
